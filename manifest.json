{
    "manifest_version": 2,
    "version": "0.0.1",
    "name": "Bye Statistics Info",
    "description": "Removes the statistics info from Twitter Timeline",
    "author": "Gustavo Henrique",
    "browser_action": {
        "default_title": "Bye Statistics Info",
        "default_popup": "index.html",
        "default_icon": "icon.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*"
            ],
            "js": [
                "js/jquery-3.1.1.min.js",
                "js/content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ]
    }
}